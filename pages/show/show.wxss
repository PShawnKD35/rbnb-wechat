@import '/dist2/styles/index.wxss';
.search {
  border-radius: 20px;
}
.section{
  padding: 20rpx;
  border-bottom: 1px solid #aaaaaa;
  border-top: 1px solid #aaaaaa;
}
.image{
  background-size: fill;
  background-position: center;
  margin: 30 5 5 5rpx;
  padding: 15px 0;
  height: 300rpx;
  width: auto;
}

.background {
  /* position: fixed; */
  width: 100%;
  z-index: 2;
}


.title{
padding:20px;
font-size: 26px;
text-align: center;
color: grey;
z-index: 1;
font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
/* background-color:green; */
}

.purple {
  background-color:#5744CC;
  height: 100px;
  position:relative;
}

.white {
border-radius: 20px;
position: relative;
height: 67px;
margin-top: -50px;
background-color: white;
}

.avatar-bordered {
  width: 50px;
  height:50px;
  border-radius: 50%;
  box-shadow: 0 1px 2px rgba(0,0,0,0.2);
  display: flex;
  justify-content: end;
}

.card-product {
  margin:10px;
  overflow: hidden;
  background: white;
  display: flex;
  align-items: center;
  border-bottom: 0.5px solid rgba(0, 0, 0, 0.2);
  justify-content: flex-end;
}
.card-product-infos p h2{
  flex: 60%;
  text-align: right;
}
.image{
  flex: 40%;
  padding: 20px;
  /* margin:20px; */

}

.h2 {
  font-size: 18px;
  font-weight: bold;
  margin: 0;
  text-align: right;
}

.p {
  font-size: 14px;
  line-height: 1.4;
  opacity: .7;
  margin-bottom: 0;
  margin-top: 8px;
   text-align: right;
}

.card-product .card-product-infos {
  margin:10px;
  display: flex;
flex-direction: column;

}

.description{
  display: block;
  margin:20px;
  padding:10px;
  border-bottom: 0.5px solid rgba(0, 0, 0, 0.2);

}

.description .description-block{
  margin-bottom: 20px;
}

.h3 {
  font-size: 18px;
  font-weight: bold;
  color:#5744CC;

}
 .h4 {
  font-size: 16px;
}


